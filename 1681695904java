import com.badlogic.gdx.graphics.g2d.SpriteBatch;

public class StreetRacingGame extends Game {

	private SpriteBatch batch;
	private Texture background;
	private Road road;
	private PlayerCar playerCar;
	private EnemyCar enemyCar;
	private HUD hud;
	private int score;
	
